%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: '/signin', class: 'sign_in', layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6" do |f|
        %header
          %h1 Sign in
        %fieldset
          =f.email_field    :email
          =f.password_field :password
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            = f.submit "Sign In"
            %p.sign_up
          .col-sm-offset-2
            = link_to "(Forgot your password?)", forgot_password_path
        %br
          Don't have an account yet?
          = link_to "Sign Up!", register_path
