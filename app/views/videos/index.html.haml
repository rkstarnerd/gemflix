%section{:class => "content clearfix"}
  - @categories.each do |category|
    %article.video_category
      %header
        %h3
          %strong
            = link_to category.name.upcase, category_path(category)
      .videos.row
        - category.recent_videos.each do |video|
          .video.col-md-2
            = link_to video_path(video) do
              %img{:src => "#{video.small_cover_url}", :width => "166", :height => "236"}