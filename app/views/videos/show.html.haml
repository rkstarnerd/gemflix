%section{:class => "content clearfix"}
  %article.video
    .container
      .row
        .video_large_cover.col-sm-7.col-sm-offset-1
          %img{:src => "#{@video.large_cover_url}", :width => "665", :height => "375"}
        .video_info.col-sm-3
          %header
            %h3
              = @video.title
            %span
              Rating: #{Review.average_rating(@video)}
          %p
            = @video.description
          .actions
            = link_to "Watch Now", "#", method: :post, class: 'a btn btn-primary'
            = link_to "+ My Queue", queue_items_path(video_id: @video.id), method: :post, class: 'a btn btn-default' unless @current_user.queued_video?(@video)
%section.reviews.container
  %section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for [@video, Review.new] do |f|
        %fieldset
          .form-group
            %label Rate this video
            %br
            = f.select :rating, options_for_video_reviews
            %br
            %br
            %label Write Review
            %br
            = f.text_area :description, rows: 6, class: "form-control"
        %fieldset.form-group.actions.clearfix
          %input(type="submit" value="Submit" class="btn")
          = link_to "Cancel", @video
  %header
    %h3 User Reviews (#{@reviews.count})
  %ul
    - @reviews.each do |review|
      %article.review
        %li.row
          .col-sm-2
            %span Rating: #{review.rating} / 5
            %p by <a href="">#{review.user.name}</a>
          .col-sm-8
            %p #{review.description}
