%section.content.clearfix
  %section.genre
    %header.clearfix
      %h1
        = @category.name.upcase
      .genre_sorting
    %article.row
      - 15.times do
        - @category.videos.shuffle.each do |video|
          .video.col-md-2
            = link_to video_path(video) do
              %img{:src => "#{video.small_cover_url}", :width => "166", :height => "236"}